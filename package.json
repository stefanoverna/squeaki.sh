{
	"name": "squeakish",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "npm run update-mastodon-urls && npm run generate-ts-types && vite build && npm run send-webmentions",
		"build:ci": "npm run build && curl -n -X POST $PRIVATE_DATOCMS_BUILD_TRIGGER_WEBHOOK -H 'Content-Type: application/json' -d '{ \"status\": \"success\" }'",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"generate-ts-types": "graphql-codegen --config graphql.config.ts",
		"generate-ts-types:watch": "graphql-codegen --watch --config graphql.config.ts",
		"prepare": "husky install",
		"send-webmentions": "webmention .svelte-kit/output/prerendered/pages/rss.xml --limit 1 --send",
		"update-mastodon-urls": "ts-node --esm ./scripts/update-mastodon-urls.ts"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "^5.0.0",
		"@graphql-codegen/typed-document-node": "^5.0.1",
		"@graphql-codegen/typescript": "^4.0.1",
		"@graphql-codegen/typescript-operations": "^4.0.1",
		"@graphql-typed-document-node/core": "^3.2.0",
		"@parcel/watcher": "^2.4.1",
		"@resvg/resvg-js": "^2.6.0",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-cloudflare": "^4.1.0",
		"@sveltejs/adapter-static": "^3.0.1",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@total-typescript/ts-reset": "^0.5.1",
		"@types/eslint": "^8.56.0",
		"@types/jsdom": "^21.1.6",
		"@types/lodash-es": "^4.17.12",
		"@types/rss": "^0.0.32",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"datocms-structured-text-to-html-string": "^3.0.0",
		"datocms-structured-text-to-plain-text": "^3.0.2",
		"dotenv": "^16.4.5",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"global-jsdom": "^24.0.0",
		"gql": "^1.1.2",
		"graphql": "^16.8.1",
		"husky": "^8.0.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"reading-time-estimator": "^1.9.4",
		"satori": "^0.10.13",
		"satori-html": "^0.3.2",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"ts-node": "^10.9.2",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3"
	},
	"type": "module",
	"engines": {
		"node": ">=18.13"
	},
	"dependencies": {
		"@datocms/cma-client": "^3.1.3",
		"@datocms/svelte": "^1.4.3",
		"@remy/webmention": "^1.5.0",
		"date-fns": "^3.3.1",
		"datocms-structured-text-utils": "^3.0.0",
		"feed": "^4.2.2",
		"jsdom": "^24.0.0",
		"just-truncate": "^2.2.0",
		"lodash-es": "^4.17.21",
		"postmark": "^4.0.2",
		"pulse-feed-parser": "^0.1.0",
		"striptags": "^3.2.0"
	}
}
