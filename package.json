{
  "name": "squeakish",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "build": "npm run update-mastodon-urls && dotenv -e .env -- astro build",
    "build:ci": "npm run build && curl -n -X POST $DATOCMS_BUILD_TRIGGER_WEBHOOK -H 'Content-Type: application/json' -d '{ \"status\": \"success\" }'",
    "preview": "wrangler pages dev ./dist",
    "check": "astro check",
    "format": "npx prettier . --write",
    "send-webmentions": "webmention dist/rss.xml --limit 1 --send",
    "update-mastodon-urls": "dotenv -e .env -- tsx ./scripts/update-mastodon-urls.ts",
    "generate-schema": "dotenv -e .env -c -- bash -c 'gql.tada generate schema https://graphql.datocms.com --header \"X-Exclude-Invalid: true\" --header \"Authorization: $DATOCMS_API_TOKEN\" && gql-tada generate output'"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/react": "^4.4.2",
    "@datocms/astro": "^0.6.4",
    "@datocms/cma-client": "^3.1.3",
    "@remy/webmention": "^1.5.0",
    "@resvg/resvg-wasm": "^2.6.2",
    "astro": "^5.16.8",
    "astro-expressive-code": "^0.38.0",
    "date-fns": "^3.3.1",
    "datocms-structured-text-to-html-string": "^5.1.7",
    "datocms-structured-text-to-plain-text": "^5.1.7",
    "datocms-structured-text-utils": "^5.1.7",
    "feed": "^4.2.2",
    "feedsmith": "^2.8.0",
    "gql.tada": "^1.9.0",
    "graphql": "^16.12.0",
    "html-parsed-element": "^0.4.1",
    "just-truncate": "^2.2.0",
    "lodash-es": "^4.17.21",
    "postmark": "^4.0.2",
    "react": "^19.2.3",
    "react-datocms": "^7.2.4",
    "striptags": "^3.2.0"
  },
  "devDependencies": {
    "@astrojs/cloudflare": "^12.6.12",
    "@astrojs/ts-plugin": "^1.10.6",
    "@resvg/resvg-js": "^2.6.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^25.0.5",
    "dotenv-cli": "^11.0.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "reading-time-estimator": "^1.9.4",
    "satori": "^0.10.13",
    "satori-html": "^0.3.2",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.13"
  }
}
